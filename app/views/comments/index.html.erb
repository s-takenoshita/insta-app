<div class="container">
  <h2> comment list </h2>

  <% @comments.each do |comment| %>
    <div class="comment">
      <div class="comment_avatar">
      </div>
      <div class="comment_body">
        <div class="comment_user">
        </div>
        <div class="comment_content">
          <%= comment.comment %>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with(model: @post, url: post_comments_path, method: 'post', local: true) do |f| %>
    <div>
      <%= f.text_field :comment, class: 'text' %>
    </div>
    <%= f.submit 'Comment', class: 'btn-primary' %>
  <% end %>

</div>

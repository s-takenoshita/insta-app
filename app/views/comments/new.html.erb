<div class="container">
  <h2>New Comment</h2>

  <% if @comment.errors.present? %>
    <ul class='error_message'>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @comment, url: post_comments_path(@comment.post_id), method: 'post', local: true) do |f| %>
    <div>
      <%= f.label :comment, 'Comment' %>
    </div>
    <div>
      <%= f.text_field :comment, class: 'text' %>
    </div>
    <%= f.submit 'Add Comment', class: 'btn-primary' %>
  <% end %>

</div>
